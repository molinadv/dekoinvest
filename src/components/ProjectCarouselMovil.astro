---
const projects = [
  { title: "Electrical Engineering", description: "Descripción 1", img: "/images-carousel.png" },
  { title: "Mechanical Design", description: "Descripción 2", img: "/images-carousel.png" },
  { title: "Electrical Studies", description: "Descripción 3", img: "/images-carousel.png" },
  { title: "Project Management", description: "Descripción 4", img: "/images-carousel.png" },
  { title: "HVAC Design", description: "Descripción 5", img: "/images-carousel.png" },
];
---

<div class="flex flex-col items-center gap-6 w-[100vw] -mx-4 px-4 md:hidden overflow-x-hidden">
  <h2 class="text-3xl font-semibold">Proyectos</h2>

  <!-- Contenedor con altura fija y scroll vertical -->
  <div class="w-full max-w-md h-[30rem] overflow-y-auto space-y-4 md:hidden px-1 pr-3">
    {projects.map((project) => (
      <div class="w-full bg-white rounded-lg shadow-md overflow-hidden">
        <img src={project.img} alt={project.title} class="w-full h-40 object-cover" />
        <div class="p-4">
          <h3 class="text-lg font-bold">{project.title}</h3>
          <p class="text-sm text-gray-700 mt-1">{project.description}</p>
          <span class="font-semibold text-black">Leer más.</span>
        </div>
      </div>
    ))}
  </div>
</div>

