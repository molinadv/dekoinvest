<!-- Solo visible en móvil -->
<div class="block md:hidden w-[100vw] -mx-4 px-4 overflow-x-hidden">
  <div class="flex flex-row w-full max-w-full mx-auto overflow-hidden rounded-lg shadow-lg border border-gray-200">
    <!-- Columna izquierda: Imagen + info -->
    <div class="w-1/2 flex flex-col bg-indigo-950">
      <!-- Imagen -->
      <div class="h-24 bg-cover bg-center" style="background-image: url('bg-map.png');"></div>

      <!-- Info del proyecto -->
      <div class="p-3 text-white flex flex-col justify-between h-full">
        <div>
          <h2 class="text-sm font-bold text-amber-400 leading-tight">
            Proyecto: Conquistador<br />Puerto Colombia
          </h2>

          <p class="mt-1 text-xs text-amber-400 font-medium">
            Meta: <span class="text-white font-bold">COP $800.000.000</span>
          </p>

          <p class="mt-1 text-xs text-amber-400 font-medium">Fecha de inversión:</p>
          <p class="text-xs">A partir del<br />10 de octubre 2025</p>
        </div>

        <button class="mt-2 bg-amber-400 text-black text-xs font-medium py-1 px-3 rounded">
          Invertir
        </button>
      </div>
    </div>

    <!-- Columna derecha: Condiciones -->
    <div class="w-1/2 bg-gray-100 p-3 text-xs text-gray-900">
      <h3 class="text-sm font-bold mb-2">Condiciones</h3>

      <div class="space-y-2">
        <div>
          <p class="font-semibold">Tasa: fija</p>
          <p>20%</p>
        </div>
        <hr class="border-gray-300" />

        <div>
          <p class="font-semibold">Plazo</p>
          <p>33 meses</p>
        </div>
        <hr class="border-gray-300" />

        <div>
          <p class="font-semibold">Pago de Intereses</p>
          <p>Mensual</p>
        </div>
        <hr class="border-gray-300" />

        <div>
          <p class="font-semibold">Pago capital</p>
          <p>Mensual</p>
        </div>
      </div>
    </div>
  </div>
</div>
