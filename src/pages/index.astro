        </div>

        <!-- Tasa de interés -->
        <div class="flex flex-col">
          <label for="taz-int" class="text-amber-400 mb-1"
            >Tasa de interés</label
          >
          <select
            id="taz-int"
            class="rounded-lg px-4 py-2 text-black bg-gray-100"
          >
            <option>% anual</option>
          </select>
        </div>

        <!-- Nivel de riesgo -->
        <div class="flex flex-col col-span-1">
          <label for="nv" class="text-amber-400 mb-1">Nivel de riesgo</label>
          <select id="nv" class="rounded-lg px-4 py-2 text-black bg-gray-100">
            <option>Seleccione</option>
          </select>
        </div>

        <!-- Botones -->
        <div
          class="flex justify-between pt-7 col-span-1 md:col-span-2 lg:col-span-2"
        >
          <button
            type="submit"
            class="bg-amber-400 text-black px-6 py-2 rounded-md"
